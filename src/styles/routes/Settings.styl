@require '../global'

.settings
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center

  .content
    max-width: 400px
    min-height: 400px
    width: 100%
    height: 100%

  div.title
    padding: 3rem 0
    text-align: center
    user-select: none

.settings .content > .v-card
  user-select: none
  border-radius: 4px
  margin-bottom: 1.5rem

  span.overline
    display: block
    font-size: 0.75rem
    font-weight: 500
    letter-spacing: 2px
    text-transform: uppercase
    margin-bottom: 1.5rem

  .setting
    cursor: pointer
    display: flex
    flex-direction: row
    align-items: center
    justify-content: space-between
    margin-bottom: 1.5rem

    &:last-child
      margin-bottom: 0

    span, a
      font-weight: 500

    a
      text-decoration: none

    .v-input
      flex: 0
      margin-top: 0
      padding-top: 0

.build-info
  .setting

    .left
      span
        display: block

        &.subheading
          font-weight: 500

    .right
      margin-left: 1.5rem

      img
        width: 80px
        opacity: 0.67

        &.invert
          filter: invert(100%)

.confirm-dialog p
  font-weight: 700
  font-size: 1rem

// Breakpoints
@media screen and (max-width: 600px)
  .settings
    margin-top: 0
    justify-content: flex-start

    .content
      max-width: calc(100% - 2.5rem)

  .donate > div
    grid-template-columns: 1fr
