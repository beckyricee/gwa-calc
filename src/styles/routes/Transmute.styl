@require '../global'

.transmute
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  margin-top: 2rem

  .content
    max-width: 400px
    min-height: 400px
    width: 100%
    height: 100%

 .subject, .final-grade
    margin-bottom: 1.5rem

.final-grade
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  padding: 1.5rem 0
  color: white
  text-align: center
  border-radius: 4px
  background: $orange['darken-2']
  z-depth(2)

  &[dark=true]
    h1, p
      color: #303030

  h1
    font-size: 3.5rem
    line-height: 3.5rem
    margin-bottom: 1rem

  p
    text-transform: uppercase
    letter-spacing: 1px
    font-weight: 500
    margin-bottom: 0

// Breakpoints
@media screen and (max-width: 600px)
  .transmute
    margin-top: 0
    justify-content: flex-start

    .content
      max-width: calc(100% - 2.5rem)
      margin-top: 1.5rem
