.set-body
  margin-top: 1.5rem
  width: 100%
  display: flex
  flex-direction: column

.subject
  margin-bottom: 1rem
  display: grid
  grid-template-columns: 1.5rem 1fr 8rem 1.5rem
  grid-auto-rows: 1fr
  grid-auto-flow: row
  grid-gap: 1.5rem

  .subject-handle, .subject-delete
    display: flex
    align-items: center
    user-select: none

  .subject-handle
    justify-content: flex-start
    cursor: move

  .subject-delete
    justify-content: flex-end
    cursor: pointer

// Breakpoints
@media screen and (max-width: 600px)
  .subject
    grid-template-columns: 1.5rem 1fr 5rem 1.5rem
    grid-gap: 0.75rem
