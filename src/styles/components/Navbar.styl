@require '../global'

.navbar
  position: fixed
  bottom: 0
  left: 0
  z-index: 15
  width: 100vw
  height: $navbar-height
  display: flex
  justify-content: center
  align-items: center
  background: $orange['lighten-3']
  z-depth(4)

.tab
  flex: 1 1 auto
  display: flex
  flex-direction: column
  align-items: center
  justify-content: flex-end
  border-radius: 3px
  cursor: pointer
  max-width: 6.5rem
  height: 100%
  position: relative
  text-decoration: none
  margin: 0 2.5rem

  &:first-child
    margin-left: auto !important
    margin-right: 0 !important

  &:last-child
    margin-left: 0 !important
    margin-right: auto !important

  &.router-link-exact-active
    i
      font-size: 24px
      line-height: 24px

    i, span
      color: black

  i
    font-size: 20px
    line-height: 20px
    will-change: font-size, color
    transition: all 100ms $ease

  i, span
    pointer-events: none
    color: rgba(0, 0, 0, 0.6)

  span
    will-change: color
    transition: color 100ms $ease
    font-weight: 500
    font-size: 0.875rem
    margin: 0.5rem 0 0.375rem

.navbar[dark=true]
  background: #212121

  i, span
    color: #616161

  .tab.router-link-exact-active
    i, span
      color: $orange['lighten-2']
